# Deployed dev environment — LTI enabled, auth off for testing
# Copy to .env and fill in secrets.

LTT_ENV=dev
LTT_DATABASE_URL=postgresql+asyncpg://ltt_user:CHANGE_ME@db-host:5432/ltt_dev

# Checkpoint DB — separate database for conversation state (psycopg format)
LTT_CHECKPOINT_DATABASE_URL=postgresql://ltt_user:CHANGE_ME@db-host:5432/ltt_checkpoints

# Redis required for LTI session storage
LTT_REDIS_URL=redis://redis-host:6379/0

# Auth disabled in dev — allows curl/Postman testing alongside LTI
LTT_AUTH_ENABLED=false
LTT_DEV_LEARNER_ID=learner-dev-001

# LTI keys (file paths or inline PEM strings)
LTT_LTI_PLATFORM_URL=https://your-openedx-instance.example.com
LTT_LTI_PLATFORM_CONFIG=configs/lti/platform.json
LTT_LTI_PRIVATE_KEY=configs/lti/private.key
LTT_LTI_PUBLIC_KEY=configs/lti/public.key

# CORS — restrict to your dev frontend
LTT_CORS_ORIGINS=["https://dev.ltt.example.com"]
LTT_CSP_FRAME_ANCESTORS='self' https://your-openedx-instance.example.com

# Frontend redirect after LTI launch
LTT_FRONTEND_URL=https://dev.ltt.example.com

# Debug endpoints enabled in dev
LTT_DEBUG=true
LTT_LOG_LEVEL=INFO

# Agent
LTT_ANTHROPIC_API_KEY=sk-ant-...
