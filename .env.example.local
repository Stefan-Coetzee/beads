# Local development — no LTI, no Redis required
# Copy to .env and adjust as needed.

LTT_ENV=local
LTT_DATABASE_URL=postgresql+asyncpg://ltt_user:ltt_password@localhost:5432/ltt_dev

# Checkpoint DB — separate database for conversation state (psycopg format)
# LTT_CHECKPOINT_DATABASE_URL=postgresql://ltt_user:ltt_password@localhost:5432/ltt_checkpoints

# Redis (optional — enables LTI endpoints and dev login)
# LTT_REDIS_URL=redis://localhost:6379/0

# Auth disabled — API accepts any request, uses dev learner
LTT_AUTH_ENABLED=false
LTT_DEV_LEARNER_ID=learner-dev-001

# CORS / CSP — wide open for local dev
LTT_CORS_ORIGINS=["*"]
LTT_CSP_FRAME_ANCESTORS=*

# Debug endpoints enabled
LTT_DEBUG=true
LTT_LOG_LEVEL=DEBUG

# Agent
LTT_ANTHROPIC_API_KEY=your-api-key-here

# Docker compose (used by docker-compose.yml, not by LTT_ settings)
POSTGRES_USER=ltt_user
POSTGRES_PASSWORD=ltt_password
POSTGRES_DB=ltt_dev

# LangSmith tracing (optional)
# LANGSMITH_TRACING=false
# LANGSMITH_API_KEY=
# LANGSMITH_PROJECT=ltt-agent
